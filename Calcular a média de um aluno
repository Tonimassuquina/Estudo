using System;

class MediaAluno
{
    static void Main()
    {
        // Notas e pesos
        double nota1, nota2, nota3;
        double peso1 = 2, peso2 = 3, peso3 = 5;

        Console.WriteLine("Digite a primeira nota:");
        nota1 = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Digite a segunda nota:");
        nota2 = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Digite a terceira nota:");
        nota3 = Convert.ToDouble(Console.ReadLine());

        // Cálculo da média ponderada
        double mediaFinal = (nota1 * peso1 + nota2 * peso2 + nota3 * peso3) / (peso1 + peso2 + peso3);

        Console.WriteLine($"\nMédia final do aluno: {mediaFinal:F2}");

        // Verifica situação do aluno
        if (mediaFinal >= 7.0)
            Console.WriteLine("Situação: Aprovado");
        else if (mediaFinal >= 5.0)
            Console.WriteLine("Situação: Recuperação");
        else
            Console.WriteLine("Situação: Reprovado");
    }
}
